{{#> "systems/animabf-guote/templates/common/ui/group.hbs"
  class="resistances"
}}
  {{>
  "systems/animabf-guote/templates/common/ui/group-header.hbs"
    title=(localize "anima.ui.resistances.title")
  }}
  {{#> "systems/animabf-guote/templates/common/ui/group-body.hbs"
    class="resistances"
  }}
    {{>
      "systems/animabf-guote/templates/common/ui/horizontal-titled-input.hbs"
      title=(localize 'anima.ui.resistances.physical')
      inputName="system.characteristics.secondaries.resistances.physical.base.value"
      inputValue=system.characteristics.secondaries.resistances.physical.base.value
      hasSecondaryInput=false
      addTooltips=true
      rollable=true
      rollableDice='1d100'
    }}
    {{>
      "systems/animabf-guote/templates/common/ui/horizontal-titled-input.hbs"
      title=(localize 'anima.ui.resistances.magic')
      inputName="system.characteristics.secondaries.resistances.magic.base.value"
      inputValue=system.characteristics.secondaries.resistances.magic.base.value
      hasSecondaryInput=false
      addTooltips=true
      rollable=true
      rollableDice='1d100'
    }}
    {{>
      "systems/animabf-guote/templates/common/ui/horizontal-titled-input.hbs"
      title=(localize 'anima.ui.resistances.psychic')
      inputName="system.characteristics.secondaries.resistances.psychic.base.value"
      inputValue=system.characteristics.secondaries.resistances.psychic.base.value
      hasSecondaryInput=false
      addTooltips=true
      rollable=true
      rollableDice='1d100'
    }}
    {{>
    "systems/animabf-guote/templates/common/ui/horizontal-titled-input.hbs"
      class="resistance"
      title="CRÍTICO"
      rollable=true
      rollableDice='1d100-1d100'
      rollableMessage='Crítico'
      disabled=true
      inputValue=system.characteristics.secondaries.resistances.physical.base.value
    }}
    
    {{!-- {{#each system.characteristics.secondaries.resistances as |atr key|}}
      {{>
      "systems/animabf-guote/templates/common/ui/horizontal-titled-input.hbs"
        class="resistance"
        title=(localize (concat 'anima.ui.resistances.' key))
        rollable=true
        rollableDice='1d100'
        rollableMessage=(localize (concat 'anima.ui.resistances.' key))
        inputName=(concat ".characteristics.secondaries.resistances." key ".base.value")
        inputValue=atr.base.value
        hasSecondaryInput=false
        rollSecondaryInput=true
        addTooltips=true
        disableSecondaryInput=false
        secondaryInputName=(concat ".characteristics.secondaries.resistances." key ".base.value")
        secondaryInputValue=atr.final.value
      }}
    {{/each}} --}}
  {{/"systems/animabf-guote/templates/common/ui/group-body.hbs"}}
