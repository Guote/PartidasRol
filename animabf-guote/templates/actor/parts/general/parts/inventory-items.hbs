{{#> "systems/animabf-guote/templates/common/ui/group.hbs"
  class="inventory-items"
}}
  {{>
  "systems/animabf-guote/templates/common/ui/group-header.hbs"
    title=(localize 'anima.ui.inventoryItemsSection.title')
    addRowButtonData="add-inventory-item"
  }}
  {{#> "systems/animabf-guote/templates/common/ui/group-body.hbs"
    class="inventory-items"
  }}
    {{#each system.general.inventory}}
      <div data-item-id='{{this._id}}' class='inventory-item-row'>
        {{>
        "systems/animabf-guote/templates/common/ui/vertical-titled-input.hbs"
          class="name"
          hideTitle=(is "gt" @index 0)
          title=(localize 'anima.ui.inventoryItemsSection.name.title')
          inputType="text"
          inputName=(concat ".dynamic.inventory." this._id ".name")
          inputValue=this.name
        }}
        {{>
        "systems/animabf-guote/templates/common/ui/vertical-titled-input.hbs"
          class="amount"
          hideTitle=(is "gt" @index 0)
          title=(localize 'anima.ui.inventoryItemsSection.amount.title')
          inputName=(concat ".dynamic.inventory." this._id ".system.amount.value")
          inputValue=this.system.amount.value
        }}
        {{>
        "systems/animabf-guote/templates/common/ui/vertical-titled-input.hbs"
          class="weight"
          hideTitle=(is "gt" @index 0)
          title=(localize 'anima.ui.inventoryItemsSection.weight.title')
          inputName=(concat ".dynamic.inventory." this._id ".system.weight.value")
          inputValue=this.system.weight.value
        }}
      </div>
    {{/each}}
  {{/"systems/animabf-guote/templates/common/ui/group-body.hbs"}}
{{/"systems/animabf-guote/templates/common/ui/group.hbs"}}