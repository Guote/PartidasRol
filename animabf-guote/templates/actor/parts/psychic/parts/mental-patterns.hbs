{{#> "systems/animabf-guote/templates/common/ui/group.hbs"
  class="mental-patterns"
}}
  {{>
  "systems/animabf-guote/templates/common/ui/group-header.hbs"
    title=(localize "anima.ui.psychic.mentalPattern.title")
    addRowButtonData="add-mental-pattern"
  }}
  {{#> "systems/animabf-guote/templates/common/ui/group-body.hbs"
    class="mental-patterns"
  }}
    {{#each system.psychic.mentalPatterns}}
      <div data-item-id='{{this._id}}' class='mental-pattern-row'>
        {{>
        "systems/animabf-guote/templates/common/ui/vertical-titled-input.hbs"
          class="name"
          title=(localize "anima.ui.psychic.mentalPattern.name.title")
          hideTitle=(is "gt" @index 0)
          inputType="text"
          inputName=(concat ".dynamic.mentalPatterns." this._id ".name")
          inputValue=this.name
        }}

        {{>
        "systems/animabf-guote/templates/common/ui/vertical-titled-input.hbs"
          class="bonus"
          title=(localize "anima.ui.psychic.mentalPattern.bonus.title")
          hideTitle=(is "gt" @index 0)
          inputName=(concat ".dynamic.mentalPatterns." this._id ".system.bonus.value")
          inputValue=this.system.bonus.value
        }}

        {{>
        "systems/animabf-guote/templates/common/ui/vertical-titled-input.hbs"
          class="penalty"
          title=(localize "anima.ui.psychic.mentalPattern.penalty.title")
          hideTitle=(is "gt" @index 0)
          inputName=(concat ".dynamic.mentalPatterns." this._id ".system.penalty.value")
          inputValue=this.system.penalty.value
        }}

      </div>
    {{/each}}
  {{/"systems/animabf-guote/templates/common/ui/group-body.hbs"}}
{{/"systems/animabf-guote/templates/common/ui/group.hbs"}}