{{! Sheet Header }}
<div class='item-img-container'>
  <img
    class='profile-img'
    src='{{item.img}}'
    data-edit='img'
    alt='{{item.name}}'
    title='{{localize "SWADE.RightClickZoom"}}'
  />
</div>
<label class='item-name-container'>
  <span class='sr-only'>{{localize 'Name'}}</span>
  <input
    type='text'
    name='name'
    class='item-name'
    value='{{item.name}}'
    placeholder='{{localize "Name"}}'
  />
</label>
{{#if hasInlineDelete}}
  <button
    type='button'
    class='inline-delete invisible'
    title='{{localize "SWADE.Del"}}'
  >
    <i class='fas fa-trash fa-3x'></i>
  </button>
{{/if}}
<span class='item-detail type' title='{{localize "Type"}}'>
  {{localize itemType}}
  {{#if item.system.severity}}
    (
    {{#if (eq item.system.severity "either")}}
      {{localize "SWADE.HindranceSeverity.Either"}}
    {{else if (eq item.system.severity "major")}}
      {{localize "SWADE.HindranceSeverity.Major"}}
    {{else if (eq item.system.severity "minor")}}
      {{localize "SWADE.HindranceSeverity.Minor"}}
    {{else}}
      {{formatHindranceSeverity item.system.severity}}
    {{/if}}
    )
  {{/if}}
</span>
<div class='item-detail source form-group' title='{{localize "SWADE.Source"}}'>
  <span class='form-fields'>
    <input
      name='system.source'
      type='text'
      value='{{item.system.source}}'
      placeholder='{{localize "SWADE.Source"}}'
    />
  </span>
</div>
{{#if isPhysicalItem}}
  <div class='item-detail quantity form-group'>
    <label for='{{item.uuid}}-quantity'>{{localize 'SWADE.Quantity'}}</label>
    <span class='form-fields'>
      <input
        id='{{item.uuid}}-quantity'
        name='system.quantity'
        type='number'
        value='{{item.system.quantity}}'
        placeholder='{{localize "SWADE.Quantity"}}'
        data-dtype='Number'
      />
    </span>
  </div>
  <div class='item-detail price form-group'>
    <label for='{{item.uuid}}-price'>{{localize 'SWADE.Price'}}</label>
    <span class='form-fields'>
      <input
        id='{{item.uuid}}-price'
        name='system.price'
        type='number'
        value='{{item.system.price}}'
        placeholder='{{localize "SWADE.Price"}}'
      /></span>
  </div>
{{/if}}
{{#if hasCategory}}
  <div
    class='item-detail category form-group'
    title='{{localize "SWADE.Category"}}'
  >
    <span class='form-fields'>
      <input
        name='system.category'
        type='text'
        value='{{item.system.category}}'
        placeholder='{{localize "SWADE.Category"}}'
      />
    </span>
  </div>
{{/if}}