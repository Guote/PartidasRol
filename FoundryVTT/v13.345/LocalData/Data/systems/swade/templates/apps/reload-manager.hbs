<div>
  {{#if canDiscard}}
    <div class='flexrow'>
      <label for='empty-magazine-discard'>
        {{localize 'SWADE.DiscardMagazine'}}
      </label>
      <input id='empty-magazine-discard' type='checkbox' class='discard' data-action='discard'/>
    </div>
  {{/if}}
  {{#each magazineGroups}}
    <section>
      <h3>{{@key}}</h3>
      <ul class='unmarked-list'>
        {{#each this}}
          <li>
            <button data-item-id='{{id}}' class='magazine' data-action='selectMag'>
              <div class='name'>
                {{#if quantity}}x{{quantity}} {{/if}}{{name}}
              </div>
              {{#if showPercentage}}
                <span class='counter'>{{percentage}}%</span>
              {{else}}
                <span class='counter'>{{charges}}/{{capacity}}</span>
              {{/if}}
              <meter
                class='meter'
                min='0'
                low='25'
                high='75'
                optimum='100'
                max='100'
                value='{{percentage}}'
              >
                {{charges}}/{{capacity}}
              </meter>
            </button>
          </li>
        {{/each}}
      </ul>
    </section>
  {{/each}}
</div>