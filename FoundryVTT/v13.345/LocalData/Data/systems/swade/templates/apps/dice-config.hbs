<section class="{{cssClass}}">
  {{#*inline "settingPartial"}}
  <div class="form-group">
    <label>{{this.name}}</label>
    <div class="form-fields">
      {{#if this.isCheckbox}}
      <input
        type="checkbox"
        name="{{this.module}}.{{this.key}}"
        data-dtype="Boolean"
        {{checked
        this.value}}
      />

      {{else if this.isSelect}}
      <select name="{{this.module}}.{{this.key}}" {{disabled this.disabled}}>
        {{selectOptions this.choices selected=this.value localize=true}}
      </select>
      
      {{else if this.isRange}}
      <input
        type="range"
        name="{{this.module}}.{{this.key}}"
        data-dtype="Number"
        value="{{ this.value }}"
        min="{{ this.range.min }}"
        max="{{ this.range.max }}"
        step="{{ this.range.step }}"
      />
      <span class="range-value">{{this.value}}</span>

      {{else if this.isObject}}
      <span></span>

      {{else}}
      <input
        type="text"
        name="{{this.module}}.{{this.key}}"
        value="{{this.value}}"
        data-dtype="{{this.type}}"
      />
      {{/if}}
    </div>

    <p class="notes">{{this.hint}}</p>
  </div>
  {{/inline}}

  {{#each settings}}
    {{> settingPartial}}
  {{/each}}

  <div class="form-group">
    <label>{{localize "DICESONICE.texture"}}</label>
    <div class="form-fields">
      <select
        name="swade.dsnCustomWildDieOptions.texture"
        {{disabled (or noWildDie hasCustomWildDie)}}
      >
        {{selectOptions textureList selected=settings.dsnCustomWildDieOptions.value.texture localize=true}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "DICESONICE.material"}}</label>
    <div class="form-fields">
      <select
        name="swade.dsnCustomWildDieOptions.material"
