      >
        {{selectOptions materialList selected=settings.dsnCustomWildDieOptions.value.material localize=true}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "DICESONICE.font"}}</label>
    <div class="form-fields">
      <select
        name="swade.dsnCustomWildDieOptions.font"
        {{disabled (or noWildDie hasCustomWildDie)}}
      >
        {{selectOptions fontList selected=settings.dsnCustomWildDieOptions.value.font localize=false}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "DICESONICE.labelColor"}}</label>
    <div class="form-fields">
      <input
        type="text"
        name="labelColor"
        value="{{settings.dsnCustomWildDieColors.value.labelColor}}"
        data-dtype="String"
        {{disabled (or noWildDie hasCustomWildDie)}}
      />
      <input
        type="color"
        name="labelColorSelector"
        value="{{settings.dsnCustomWildDieColors.value.labelColor}}"
        data-edit="labelColor"
        {{disabled (or noWildDie hasCustomWildDie)}}
      />
    </div>
  </div>

  <div class="form-group">
