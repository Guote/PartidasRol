        value="{{settings.dsnCustomWildDieColors.value.outlineColor}}"
        data-edit="outlineColor"
        {{disabled (or noWildDie hasCustomWildDie)}}
      />
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "DICESONICE.edgeColor"}}</label>
    <div class="form-fields">
      <input
        type="text"
        name="edgeColor"
        value="{{settings.dsnCustomWildDieColors.value.edgeColor}}"
