      />
      <input
        type="color"
        name="diceColorSelector"
        value="{{settings.dsnCustomWildDieColors.value.diceColor}}"
        data-edit="diceColor"
        {{disabled (or noWildDie hasCustomWildDie)}}
      />
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "DICESONICE.outlineColor"}}</label>
