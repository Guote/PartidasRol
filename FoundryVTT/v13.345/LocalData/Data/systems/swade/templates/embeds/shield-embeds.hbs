<div>
    <section>
        <table>
            <thead>
                <tr>
                    <th colspan="5">
                        {{parent.name}}
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{localize 'SWADE.Parry'}}</td>
                    <td>{{localize 'SWADE.Cover._name'}}</td>
                    <td>{{localize 'SWADE.MinStrShort'}}</td>
                    <td>{{localize 'SWADE.Weight'}}</td>
                    <td>{{localize 'SWADE.Price'}}</td>
                </tr>            
                <tr>
                    <td>{{signedString parry}}</td>
                    <td>{{signedString cover}}</td>
                    <td>{{minStr}}</td>
                    <td>{{weight}}</td>
                    <td>{{price}}</td>
                </tr>
            </tbody>
        </table>
    </section>
    {{#if notes}}
    <section>
        <div><span>{{localize 'SWADE.Notes'}}:&nbsp;</span>{{notes}}</div>
    </section>
    {{/if}}
    <section>
        {{{enrichedDescription}}}
    </section>
</div>
