{{#*inline "toggleLine"}}
    {{#if base.used}}
        <i class="far fa-check-square toggle-button{{#unless base.enabled}} disabled{{/unless}}" data-action="{{base.css}}"></i>
    {{else}}
        <i class="far fa-square toggle-button{{#unless base.enabled}} disabled{{/unless}}" data-action="{{base.css}}"></i>
    {{/if}}
    <span class="title {{#unless base.enabled}}disabled{{/unless}}">{{base.label}}</span>
{{/inline}}

<div>
    <p class="notification info">{{localize 'RTUCards.settings.config-shortcuts.title'}}</p>

    {{#each stacks as |stack| }}
        <div class="flexcol stack-panel" data-stack="{{stack.key}}">
            <div class="flexrow title-line">
                {{> toggleLine base=header}}
            </div>
            <div class="flexrow">
                <span class="header">{{localize 'RTUCards.settings.config-shortcuts.headers.shortcutIcon'}}</span>
                <input type="text" class="icon-input" value="{{stack.icon}}" >
            </div>
            <div class="flexrow">
                <span class="header">{{localize 'RTUCards.settings.config-shortcuts.headers.maxPerLine'}} {{stack.maxPerLine}}</span>
                <input type="range" class="max-cards" min="0" max="20" value="{{stack.maxPerLine}}" >
            </div>
            <div class="flexrow">
                <span class="header">{{localize 'RTUCards.settings.config-shortcuts.headers.cardScale'}} {{stack.scalePercent}}%</span>
                <input type="range" class="card-scale" min="1" max="30" value="{{stack.scalePercent}}" >
            </div>

            <div class="flexrow subtitle-line">
                {{> toggleLine base=otherUsers}}
            </div>
            <div class="flexrow other-users-line">
                {{#each others as |other|}}
                    <img class="other-user {{other.css}}" data-stack="{{other.stack}}" data-id={{other.id}} data-tooltip="{{other.name}}" src="{{other.icon}}">
                {{/each}}
            </div>
        </div>
    {{/each}}

    <button class="reset-stacks" data-action="resetStacks">{{localize "RTUCards.settings.config-shortcuts.reset"}}</button>
</div>